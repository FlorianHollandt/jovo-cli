{
    "name": "jovo-base-module",
    "version": "0.1.0",
    "description": "Example base module",
	"main": "dist/src/index",
	"types": "dist/src/index.d.ts",
    "scripts": {
        "build": "tsc",
        "tslint": "node_modules/.bin/tslint -p tsconfig.json -c tslint.json",
        "tsc": "node_modules/.bin/tsc --watch",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "author": "jovotech",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/es6-promise": "^3.3.0",
		"@types/jest": "^23.3.5",
        "@types/node": "^10.10.1",
        "jest": "^23.6.0",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    },
    "dependencies": {},
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testURL": "http://localhost/",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
