{
    "compilerOptions": {
        "lib": [
            "es7"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "strict": true,
        "preserveConstEnums": true,
		"declaration": true,
        "outDir": "./dist/",
        "target": "es2017",
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
